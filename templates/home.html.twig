{% extends 'base.html.twig' %}

{% block title %}
    Page d'accueil
{% endblock %}

{% block body %}
    {% include "shared/_flashSuccess.html.twig" %}
    {% include "shared/_flashWarning.html.twig" %}
    <div>
        {% if app.user %}
            <h1>Bienvenue sur Todo List</h1>
            {#<h3> Liste des taches</h3>#}

            <table class="table table-hover">
                <thead>
                <tr>
                    <th scope="col">Titre</th>
                    <th scope="col">Contenu</th>
                    <th scope="col">Propriétaire</th>
                    <th scope="col">Statut</th>
                    <th scope="col">Date</th>
                </tr>
                </thead>
                <tbody>
                {% for task in tasks %}
                    <tr class="table-active">
                        <th scope="row">{{ task.title }}</th>
                        <td>{{ task.content }}</td>
                        <td>{{ task.usertd.username }}</td>
                        <td>{% if task.isDone == 1 %}
                                Fermé
                            {% else %}
                                Ouvert
                            {% endif %}
                        </td>
                        <td>{{ task.createAt | date('d/m/Y') }}</td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>
            <div class="pagination pagination-lg">
                {{ knp_pagination_render(tasks) }}
            </div>
        {% else %}
            <h1> TODO LIST</h1>
            <img style="width:100%; " src="img/todolist_homepage.jpg"
                 class="img-fluid" alt="todolist">
        {% endif %}

    </div>
{% endblock %}